<%= form_with model: @standup, id: 'standup-form', html:{class: 'form-horizontal'} do |f| %>
  <%= f.hidden_field :standup_date, value: current_date %>
  <% if @standup.errors.any?%>
    <%= render partial: 'shared/model_errors', locals: {model: @standup} %>
  <% end %>
  <%= render partial: 'layouts/date_change', locals: {reload_path: "/s/#{action_name}"} %>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h3>
            What did you do since your last standup?
          </h3>
        </div>
        <div class="card-body">
          <%= f.fields_for :dids do |did| %>
            <%= render 'did_fields', f: did %>
          <% end %>
          <div class="links" style="width: 40px;">
            <%= link_to_add_association f, :dids, class: 'btn btn-block btn-success btn-flat', style: 'border-radius:50%' do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h3>
            What are you doing today?
          </h3>
        </div>
        <div class="card-body">
          <%= f.fields_for :todos do |todo| %>
            <%= render 'todo_fields', f: todo %>
          <% end %>
          <div class="links" style="width: 40px;">
            <%= link_to_add_association f, :todos, class: 'btn btn-block btn-success btn-flat', style: 'border-radius:50%' do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h3>
            What is blocking you?
          </h3>
        </div>
        <div class="card-body">
          <%= f.fields_for :blockers do |blocker| %>
            <%= render 'blocker_fields', f: blocker %>
          <% end %>
          <div class="links" style="width: 40px;">
            <%= link_to_add_association f, :blockers, class: 'btn btn-block btn-success btn-flat', style: 'border-radius:50%' do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit 'Save', class: ' btn btn-primary' %>
    </div>
  </div>
<% end %>
